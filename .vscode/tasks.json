{
	"version": "2.0.0",
	"type": "shell",
	"command": "${workspaceRoot}/compiler/pawncc.exe",
	"problemMatcher": "$pawncc",
	"presentation": {
		"reveal": "always",
		"focus": true,
		"panel": "dedicated",
		"clear": true
	},
	"tasks": [
		{
			"label": "Build server",
			"args": [
				"${workspaceFolder}\\gamemodes\\test.pwn",
				"\"-icompiler/include\"",
				"\"-isource\"",
				"\"-ogamemodes/test.amx\"",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Build file",
			"args": [
				"\"${relativeFile}\"",
				"\"-icompiler/include\"",
				"\"-isource\"",
				"\"-o${fileDirname}\\${fileBasenameNoExtension}.amx\"",
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}